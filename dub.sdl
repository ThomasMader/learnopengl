    targetPath "bin"
    targetType "executable"
    sourcePaths "src/getting_started/hello_triangle_indexed"
    importPaths "src/getting_started/hello_triangle_indexed"
    dependency "derelict-gl3" version="~>1.0.24"
    dependency "derelict-glfw3" version="~>3.1.3"
